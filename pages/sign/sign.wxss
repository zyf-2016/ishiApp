.page {
	height: 100vh;
	width: 100vw;
	box-sizing: border-box;
	padding: 25rpx 30rpx;
}
.header {
	height: 100rpx;
	border-bottom: 1rpx solid #b1b1b1;
	box-sizing: border-box;
	display: flex;
	justify-content: center;
	align-items: center;
	font-size: 36rpx;
	font-weight: bold;
}
.title {
	line-height: 100rpx;
	color: #b1b1b1;
	flex: 1;
	text-align: center;
}
.title-text {
	display: inline-block;
	height: 100rpx;
	padding: 0 20rpx;
}
.title-text.active {
	position: relative;
	color: #000;
}
.title-text.active:after {
	content: '';
	display: block;
	position: absolute;
	width: 100%;
	height: 8rpx;
	background: #000;
	bottom: -8rpx;
	left: 0;
}

.list {
	margin-top: 25rpx;
}
.list-item {
	border-radius: 16rpx;
	padding: 25rpx 30rpx;
	margin-bottom: 25rpx;
	border-radius: 16rpx;
	background: #fff;
	box-shadow: 0 0 8px rgba(178, 178, 178, 0.3);
}
.list-top {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
	padding-bottom: 30rpx;
	border-bottom: 1rpx solid #ebebeb;
}
.list-thumb {
	width: 280rpx;
	height: 160rpx;
}
.list-info {
	flex: 1;
	padding-left: 30rpx;
}
.list-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #4d4d4d;
	margin-bottom: 30rpx;
}
.list-group {
	display: flex;
	justify-content: flex-start;
	align-items: center;
}
.list-group + .list-group {
	margin-top: 20rpx;
}
.list-icon {
	width: 30rpx;
	height: 30rpx;
	margin-right: 16rpx;
}
.list-text {
	font-size: 24rpx;
	color: #b1b1b1;
}
.list-bottom {
	height: 50rpx;
}
.list-btn {
	float: right;
	width: 128rpx;
	height: 40rpx;
	line-height: 40rpx;
	padding: 0;
	font-size: 28rpx;
	border-radius: 30rpx;
	margin-top: 20rpx;
	background: #bc1e2d;
	color: #fff;
	border: 1rpx solid #bc1e2d;
}
.list-btn[disabled] {
	font-size: 28rpx;
	color: #979797;
	background: #f0f0f0;
	border: 1rpx solid #979797;
}