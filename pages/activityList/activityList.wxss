/* pages/activityList/activityList.wxss */
.page {
	height: 100%;
	width: 100vw;
	background: #fff;
	padding: 30rpx 30rpx 136rpx;
	box-sizing: border-box;
}
.list:after {
	content: "";
	display: block;
	clear: both;
	visibility: hidden;
	height: 0;
}
.list-item {
	position: relative;
	float: left;
	width: 330rpx;
	height: 330rpx;
	margin-bottom: 30rpx;
}
.list-item:nth-of-type(2n) {
	float: right;
}
.list-thumb {
	width: 100%;
	height: 100%;
}
.list-box {
	position: absolute;
	width: 100%;
	height: 100%;
	z-index: 2;
	left: 0;
	top: 0;
}
.list-info {
	position: absolute;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	width: 100%;
	height: 124rpx;
	background: rgba(0,0,0,.7);
	left: 0;
	bottom: 0;
	padding: 10rpx 20rpx;
	box-sizing: border-box;
	z-index: 2;
}
.list-title {
	width: 100%;
	color: #fff;
	font-size: 24rpx;
	font-weight: bold;
	line-height: 1;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
.list-date {
	width: 100%;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.list-text {
	font-size: 20rpx;
	color: #b1b1b1;
}
.bottom {
	width: 100%;
	height: 136rpx;
	background: #fff;
	position: fixed;
	left: 0;
	bottom: 0;
	display: flex;
	justify-content: center;
	align-items: center;
	z-index: 9;
}
.btn {
	width: 336rpx;
	height: 96rpx;
}