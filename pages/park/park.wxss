/* pages/park/park.wxss */
.list {
	margin-top: 25rpx;
}
.list-item {
	border-radius: 16rpx;
	padding: 25rpx 30rpx;
	margin-bottom: 25rpx;
	border-radius: 16rpx;
	background: #fff;
	box-shadow: 0 0 8px rgba(178, 178, 178, 0.3);
}
.list-top {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
}
.list-thumb {
	width: 280rpx;
	height: 160rpx;
}
.list-info {
	flex: 1;
	padding-left: 30rpx;
}
.list-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #4d4d4d;
	margin-bottom: 30rpx;
}
.list-group {
	display: flex;
	justify-content: flex-start;
	align-items: center;
}
.list-group + .list-group {
	margin-top: 20rpx;
}
.list-icon {
	width: 30rpx;
	height: 30rpx;
	margin-right: 16rpx;
}
.list-text {
	font-size: 24rpx;
	color: #b1b1b1;
}