.detail-info {
	width: 100%;
	font-size: 30rpx;
	color: #b1b1b1;
	line-height: 1;
}
.fee {
	font-size: 28rpx;
	color: #333;
}
.success {
	color: #22b373;
	font-size: 30rpx;
}
.success + .success {
	margin-top: 20rpx;
}
.error {
	color: #ed1c24;
	font-size: 30rpx;
}
.text-left {
	font-size: 30rpx;
}
.text-right {
	font-size: 30rpx;
	color: #000;
	margin-top: 20rpx;
}
.info {
	color: #999999;
}
.text-error {
	color: #c6161d;
}
.text-success {
	color: #22b373;
}
